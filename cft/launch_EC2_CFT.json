{
	"AWSTemplateFormatVersion":"2010-09-09",
	"Description":"",
	"Parameters" : {
		"UserID" : {
			"Type" : "String"
		},
		"InstanceName" : {
			"Description" : "Name of Instance",
			"Type" : "String"
		},
		"InstanceType" : {
			"Description" : "Type of Instance",
			"Type" : "String"
		},
		"SecurityGroupIds" : {
			"Description" : "Security groups that can be used to access the EC2 Instances",
			"Type" : "List<AWS::EC2::SecurityGroup::Id>"
		},
		"ImageID" : {
			"Description" : "AMI ID",
			"Type" : "AWS::EC2::Image::Id"
		},
		"SubnetID" : {
			"Description" : "the subnet ID to use",
			"Type" : "AWS::EC2::Subnet::Id"
		}
	},
	"Resources" : {
		"EC2Instance" : {
			"Type" : "AWS::EC2::Instance",
			"Properties" : {
				"ImageId" : { "Ref" : "ImageID" },
				"InstanceType" : { "Ref" : "InstanceType" },
				"KeyName" : "nv-test-0523",
				"PublicKeyParameter": {
					"Type": "String",
					"Description": "Public Key to be added to authorized_keys file",
					"MinLength": "1",
					"MaxLength": "4096",
					"AllowedPattern": "^[\\s\\S]*$",
					"ConstraintDescription": "ssh-rsa  nani@jenkins"
				},
				"UserData": {
					"Fn::Base64": {
						"Fn::Sub": [
							"#!/bin/bash\nuseradd nani\necho \"nani:6264\" | chpasswd\necho \"nani\tALL=(ALL) NOPASSWD:ALL\" >> /etc/sudoers\necho \"PubkeyAuthentication yes\" >> /etc/ssh/sshd_config\necho \"PasswordAuthentication yes\" >> /etc/ssh/sshd_config\nsudo service ssh restart\n",
							{
								"PublicKey": { "Ref": "PublicKeyParameter" }
							}
						]
					}
				},
				"NetworkInterfaces" : [{
					"AssociatePublicIpAddress" : "true",
					"DeviceIndex" : "0",
					"SubnetId" : { "Ref" : "SubnetID" },
					"GroupSet" : { "Ref" : "SecurityGroupIds" }
				}],
				"Tags" : [
				{
					"Key" : "UserID",
					"Value" : { "Ref" : "UserID" }
				},
				{
					"Key" : "Name",
					"Value" : { "Ref" : "InstanceName" }
				},
				{
					"Key" : "Manager",
					"Value" : "Harish Lankepalli"
				},
				{
					"Key" : "Sr.Manager",
					"Value" : "Narendra Kaduru"
				}
				
				]
			}
		}
	},
	"Outputs" : {
		"InstanceId" : {
			"Description": "InstanceID of the newly created EC2 Instance",
			"Value" : { "Ref" : "EC2Instance" }
		},
		"AZ" : {
			"Description" : "AZ of the newly created EC2 Instance",
			"Value" : {
				"Fn::GetAtt" : [
					"EC2Instance",
					"AvailabilityZone"
				]
			}
		},
		"PublicIP" : {
		  "Description" : "Public IP address of the newly created EC2 instance",
		  "Value" : { "Fn::GetAtt" : [ "EC2Instance", "PublicIp" ] }
		},
		"PrivateIP" : {
		  "Description" : "Private IP address of the newly created EC2 instance",
		  "Value" : { "Fn::GetAtt" : [ "EC2Instance", "PrivateIp" ] }
		}
	}
}
